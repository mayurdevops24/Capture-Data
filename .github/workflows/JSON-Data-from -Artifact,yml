name: Use Data from JSON Artifact

on:
  workflow_dispatch:  # Manually triggered
  push:
    branches:
      - main

jobs:
  process-json:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout Repository
        uses: actions/checkout@v4

      - name: Download JSON artifact from Workflow 1
        uses: actions/download-artifact@v4
        with:
          name: post-response-json  # The artifact name from Workflow 1

      - name: Process JSON data
        run: |
          # Parse the JSON file to extract specific data
          title=$(jq -r '.title' response.json)  # Assuming the response has a 'title' field
          body=$(jq -r '.body' response.json)    # Assuming the response has a 'body' field
          
          # Output the captured data to verify
          echo "Title: $title"
          echo "Body: $body"
          
          # Store the data into a new JSON file for further use
          echo "{\"title\": \"$title\", \"body\": \"$body\"}" > processed_data.json

      - name: Upload processed data as artifact
        uses: actions/upload-artifact@v4
        with:
          name: processed-data
          path: processed_data.json
